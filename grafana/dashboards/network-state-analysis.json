                    "datasource": {
                        "type": "influxdb",
                        "uid": "P65EB462968463E7E"
                    },
                    "query": "// Get current state and metrics for each orb\nlatency = from(bucket: \"orb_metrics\")\n  |> range(start: v.timeRangeStart, stop: v.timeRangeStop)\n  |> filter(fn: (r) => r._measurement == \"responsiveness\" and r._field == \"latency_avg_us\")\n  |> group(columns: [\"orb_name\", \"network_state\", \"network_type\", \"isp_name\"])\n  |> mean()\n  |> map(fn: (r) => ({r with _field: \"latency\"}))\n\nreliability = from(bucket: \"orb_metrics\")\n  |> range(start: v.timeRangeStart, stop: v.timeRangeStop)\n  |> filter(fn: (r) => r._measurement == \"scores\" and r._field == \"reliability_score\")\n  |> group(columns: [\"orb_name\", \"network_state\"])\n  |> mean()\n  |> map(fn: (r) => ({r with _field: \"reliability\"}))\n\n// Count time in current state\nstate_duration = from(bucket: \"orb_metrics\")\n  |> range(start: v.timeRangeStart, stop: v.timeRangeStop)\n  |> filter(fn: (r) => r._measurement == \"responsiveness\" and r._field == \"latency_avg_us\")\n  |> group(columns: [\"orb_name\", \"network_state\"])\n  |> count()\n  |> map(fn: (r) => ({r with _value: float(v: r._value) * 0.25, _field: \"duration\"})) // Assuming 15s intervals\n\njoin1 = join(tables: {t1: latency, t2: reliability}, on: [\"orb_name\", \"network_state\"])\njoin2 = join(tables: {t1: join1, t2: state_duration}, on: [\"orb_name\", \"network_state\"])\n  |> last()\n  |> map(fn: (r) => ({\n    \"Orb Name\": r.orb_name,\n    \"Network Type\": r.network_type,\n    \"ISP\": r.isp_name,\n    \"Network State\": r.network_state,\n    \"Avg Latency\": r.latency,\n    \"Reliability %\": r.reliability,\n    \"Time in State\": r.duration\n  }))",
                    "refId": "A"
                }
            ],
            "title": "Current Network State Summary",
            "type": "table"
